{
	"compilerOptions": {
		"lib": ["esnext"],
		"incremental": true,
		"target": "es6",
		"module": "commonjs",
		"sourceMap": true,
		"allowJs": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"removeComments": true,
		"strict": true,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"paths": {
			"@app/*": [
				"src/*"
			],
			"@controllers/*": [
				"src/controllers/*"
			],
			"@middlewares/*": [
				"src/middlewares/*"
			],
			"@models/*": [
				"src/models/*"
			],
			"@routes/*": [
				"src/routes/*"
			],
			"@types/*": [
				"src/types/*"
			],
			"@lib/*": [
				"src/lib/*"
			]
		},
		"typeRoots": [
			"./src/types"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"src/**/*.ts"
	]
}